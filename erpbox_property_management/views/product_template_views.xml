<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_only_form_view_inherit_erpbox_property" model="ir.ui.view">
        <field name="name">product.template.view.form.inherit.erpbox.property</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <field name="barcode" position="after">
                <field name="auto_validation" />
            </field>
        </field>
    </record>

    <record id="product_normal_form_view_inherit_erpbox_property" model="ir.ui.view">
        <field name="name">product.product.view.form.inherit.erpbox.property</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <field name="categ_id" position="after">
                <field name="auto_validation" />
            </field>
        </field>
    </record>

</odoo>
